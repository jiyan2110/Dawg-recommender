{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/build"
            }
        },
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "methods": ["POST"],
            "destination": "/api/index.py"
        },
        {
            "src": "/(.*)",
            "destination": "/frontend/$1"
        }
    ]
}